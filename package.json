{
  "name": "udemy-nodejs-angular2",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "del-cli public/js/app && webpack --config webpack.config.dev.js --progress --profile --watch",
    "build:prod": "del-cli public/js/app && ngc -p tsconfig.aot.json && ngc -p tsconfig.aot.json && webpack --config webpack.config.prod.js --progress --profile --bail && del-cli 'public/js/app/**/*.js' 'public/js/app/**/*.js.map' '!public/js/app/bundle.js' '!public/js/app/*.chunk.js' 'assets/app/**/*.ngfactory.ts' 'assets/app/**/*.shim.ts' 'assets/app/**/*.ngsummary.json' 'assets/app/**/*.ngstyle.ts'"
  },
  "dependencies": {
    "@angular/animations": "^4.4.3",
    "@angular/cdk": "^2.0.0-beta.10",
    "@angular/common": "^4.4.3",
    "@angular/compiler": "^4.4.3",
    "@angular/compiler-cli": "^4.4.3",
    "@angular/core": "^4.4.3",
    "@angular/forms": "^4.4.3",
    "@angular/http": "^4.4.3",
    "@angular/material": "^2.0.0-beta.10",
    "@angular/platform-browser": "^4.4.3",
    "@angular/platform-browser-dynamic": "^4.4.3",
    "@angular/platform-server": "^4.4.3",
    "@angular/router": "^4.4.3",
    "@angular/upgrade": "^4.4.3",
    "@types/core-js": "^0.9.43",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.1",
    "debug": "^2.2.0",
    "express": "^4.14.1",
    "hbs": "^3.1.1",
    "mongoose": "^4.11.12",
    "mongoose-unique-validator": "^1.0.6",
    "morgan": "^1.6.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3",
    "serve-favicon": "^2.3.2",
    "zone.js": "^0.8.17"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.36",
    "@types/node": "^6.0.88",
    "angular-router-loader": "^0.5.0",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^3.2.3",
    "del-cli": "^0.2.1",
    "html-loader": "^0.4.5",
    "raw-loader": "^0.5.1",
    "ts-loader": "^2.3.7",
    "typescript": "^2.5.2",
    "webpack": "^2.7.0",
    "webpack-merge": "^4.1.0"
  }
